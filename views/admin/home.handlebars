<h1>Admin Home - all the Video Submissions are listed below</h1>
{{#each ideas}}
<div class="card card-body mb-2 ">
   <h3>{{title}}</h3>
   <h4>{{url}}</h2>
   <p>{{details}}</p>
   <p>{{type}}</p>
   <a class="btn btn-dark btn-block mb-2" href = "/ideas/edit/{{_id}}">Edit</a>
   <form method="post" action="/ideas/{{_id}}?_method=DELETE">
      <input type="hidden" name="_method" value="DELETE" />
      <input type="submit" class="btn btn-danger btn-block" value="Delete" />
   </form>
</div>
{{else}}
<p>No Videos found. </p>
{{/each}}